[Unit]
Description=Telegram Bot for Clojure REPL
After=syslog.target
After=network.target

[Service]
Type=simple
User=some_user
Group=some_user
WorkingDirectory=/path/to/telegram-clojure-repl-bot
ExecStart=/path/to/telegram-clojure-repl-bot/telegram-clojure-repl-bot
Restart=always
RestartSec=5
Environment="JAVA_HOME=/path/to/java-home"
StandardInput=tty
TTYPath=/dev/tty49

[Install]
WantedBy=multi-user.target
